.wrapper_with_padding
	#notes.clearfix
		- unless @notes.blank?
			- @notes.each do |note|
				%a{ href: (url_for [note]) }
					.note
						%p.title= note.title
						%p.date= time_ago_in_words(note.created_at)
		-else
			%h2 Add A Note
			%p You haven't added any notes yet. Create A New One Below!
			%button= link_to "New Note", new_note_path	
			